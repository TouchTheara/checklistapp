rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Per-user root profile: readable by any signed-in user for invites/search; writable only by owner.
    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;
    }

    // Tokens: owner can read; any signed-in user can write (for cross-device token registration).
    match /users/{uid}/tokens/{tokenId} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null;
    }

    // Notifications: owner can read; any signed-in user can write (for invites/assignment notifications).
    match /users/{uid}/notifications/{notificationId} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null;
    }

    // All other per-user subcollections limited to owner.
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
